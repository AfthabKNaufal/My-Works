<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="website_contactus_inherit_contact_lead" inherit_id="website.contactus">
        <xpath expr="//div[hasclass('s_website_form_field')]" position="after">
            <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom s_website_form_required"
                 data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px">
                        <span class="s_website_form_label_content">Interest</span>
                    </label>
                    <div class="col-sm">
                        <input id="interest" type="text" class="form-control s_website_form_input" name="interest"
                               data-fill-with="Interest"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
