<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
       <record id="service_done_email_template" model="mail.template">
           <field name="name">Service email template</field>
           <field name="model_id" ref="machine_management.model_machine_service"/>
           <field name="subject">{{ object.machine_id.name }}</field>
           <field name="email_from">{{ (object.tech_person_ids.email) }}</field>
           <field name="partner_to">{{ object.customer_id.id }}</field>
           <field name="description">Add Description</field>
           <field name="body_html" type="html">
               <div>
                   <p>
                       Hello,
                       <br/>
                       <br/>
                       Completed, service of the machine:)
                       <br/>
                       <br/>
                       <br/>Mitchell Admin
                       <br/>
                       <br/>
                   </p>
               </div>
           </field>
       </record>
   </data>
</odoo>