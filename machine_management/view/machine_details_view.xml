<odoo>
    <template id="machine_management.machine_details_template" name="machine_details">
        <t t-call="website.layout">
            <div class="details_page">
                <div>
                    <header class="details_header" style="color: white;
                            position: relative;
                            font-size: 36px;
                            left: 38%;
                            padding-bottom: 40px;
                            font-weight: bold;">Machine Details</header>
                </div>
                <div class="detail_body">
                    <t t-foreach="machine" t-as="machines">
                      <div>
                          <div class="detail_image">
                             <img class="details_image_left" t-attf-src="data:image/png;base64,{{machines.image}}"/>
                          </div>
                          <div class="machine_labels">
                              <label><span>Name:</span></label>
                          </div>
                          <div class="machine_properties">
                              <t t-out="machines.name"/>
                          </div>
                          <div class="machine_labels">
                              <label><span>price:</span></label>
                          </div>
                          <div class="machine_properties">
                             <t t-esc="machines.currency_id.symbol"/> <t t-out="machines.purchase_value" t-options='{"widget": "float", "precision": 2}'/>
                          </div>
                          <div class="machine_labels">
                              <label><span>Owner:</span></label>
                          </div>
                          <div class="machine_properties">
                              <t t-esc="machines.partner_id.name"/>
                          </div>
                      </div>
                    </t>
                    </div>

            </div>
        </t>
    </template>
</odoo>