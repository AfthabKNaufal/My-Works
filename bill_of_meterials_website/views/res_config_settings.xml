<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_inherited_view" model="ir.ui.view">
        <field name="name">res.config.settings.inherited.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_info_settings']/setting"
                   position="inside">
                <div class="row mt8">
                    <label for="product_ids" string="Multiple Products"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>