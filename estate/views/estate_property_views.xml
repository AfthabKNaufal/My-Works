<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_table" model="ir.ui.view">
        <field name="name">estate_property_tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedroom"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="available_from"/>
               
            </tree>
        </field>
    </record>

    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate_property_form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="New Form">
                <sheet>
                    <h1>
                        <field name="name" string="tags"/>
                    </h1>
                    <group>
                    <field name="tag" widget="many2many_tags"/>
                    </group>
                    <group>
                        <group>
                            <field name="product_type"/>
                            <field name="postcode"/>
                            <field name="available_from"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                            <field name="expected_price"/>
                        </group>

                        <notebook>

                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedroom"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_orientation"/>
                                    <field name="states"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name="offer"/>
                                </group>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="salesman"/>
                                    <field name="buyer"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


<record id="estate_property_search" model="ir.ui.view">
    <field name ="name">Search</field>
    <field name ="model">estate.property</field>
    <field name ="arch" type="xml">
        <search string="search">
            <field name="name"/>
            <field name="postcode"/>
            <field name="expected_price"/>
            <field name="bedroom"/>
            <field name="living_area"/>
            <field name="facades"/>

            <filter name="Available" domain="['|',('states', '=', 'new'),
                                            ('states','=','offer_received')]"/>

            <filter name="group" string="post code" domain="[]"
                    context="{'group_by':'postcode'}"/>
        </search>
    </field>
</record>
</odoo>
