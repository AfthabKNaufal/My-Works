<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_conf_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_payment_section']" position="after">
                <div class="discount_limit"
                     style="left: 47px; position: relative;">
                    <setting id="discount_limit" string="Discount Limit"
                             help="Set Maximum Discount Limit">
                        <div class="content-group mt16"
                             >
                            <div class="row mt16">
                                <field name="discount_value"/>
                            </div>
                        </div>
                    </setting>
                </div>
            </xpath>
        </field>
    </record>
</odoo>