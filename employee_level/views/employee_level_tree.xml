<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="employee_level_window" model="ir.actions.act_window">
        <field name="name">Employee level</field>
        <field name="res_model">employee.level</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="promotion_level_tree_view" model="ir.ui.view">
        <field name="name">Employee level tree</field>
        <field name="model">employee.level</field>
        <field name="arch" type="xml">
        <tree editable="bottom">
            <field name="highest"/>
            <field name="level"/>
            <field name="salary"/>
        </tree>
        </field>
    </record>
</odoo>